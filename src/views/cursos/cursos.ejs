<%- include ("../partials/header") %>

<h1 class="text-center mt-5">Cursos</h1>


<div class="container">
    <% if (success_msg != "") { %>
        <%- include ("../partials/messages") %>
    <% } %>
</div>

<div class="container">
    <div class="row mt-5 ">
        <div class="col-lg-5 mb-4">
            <div class="card">
                <div class="card-body">
                    <form action="/cursos/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="idCurso" placeholder="Codigo" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="curso" placeholder="Curso" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="creditos" placeholder="Creditos" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="preRequisitos" placeholder="preRequisitos" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Save Curso</button> 
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <table class="table table-bordered table-hover table-dark table-responsive-md">
                <thead class="thead-light">
                    <tr>
                        <th>Codigo</th>
                        <th>Curso</th>
                        <th>Creditos</th>
                        <th>Pre Requisitos</th>
                        <th class="text-center">Control</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((curso) =>{ %>
                        <tr>
                            <td><%= curso.idCurso %></td>
                            <td><%= curso.curso %></td>
                            <td><%= curso.creditos %></td>
                            <td><%= curso.preRequisitos %></td>
                            <td class="d-flex justify-content-around">
                                <a href="/cursos/delete/<%= curso.idCurso %>" class="btn btn-danger mr-1">Delete</a>
                                <a href="/cursos/edit/<%= curso.idCurso %>" class="btn btn-warning">Update</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div> 

    </div>
</div>

<%- include ("../partials/footer") %>
    

