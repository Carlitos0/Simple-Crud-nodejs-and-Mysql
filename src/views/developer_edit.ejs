<div class="container">
    <div class="row pt-5">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <form action="/updateDeveloper/<%= developer.id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="nombre" value="<%= developer.nombre%>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email"  value="<%= developer.email %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" name="telefono"  value="<%= developer.telefono %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="rubro" value="<%= developer.rubro %>" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Edit Developer</button> 
                    <input type="hidden" name="id" value="<%= developer.id %>">
                </form>
            </div>
        </div>
    </div>
</div>


