<%- include ("../partials/header") %>

<h1 class="text-center mt-5">Alumnos</h1>


<div class="container">
    <% if (success_msg != "") { %>
        <%- include ("../partials/messages") %>
    <% } %>
</div>

<div class="container">
    <div class="row mt-5 ">
        <div class="col-lg-5 mb-4">
            <div class="card">
                <div class="card-body">
                    <form action="/alumnos/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="idAlumno" placeholder="Codigo" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombres" placeholder="Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidos" placeholder="Last name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="correo" placeholder="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="telefono" placeholder="cellphone" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Save Alumno</button> 
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <table class="table table-bordered table-hover table-dark table-responsive-md">
                <thead class="thead-light">
                    <tr>
                        <th>Codigo</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th class="text-center">Control</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((alumno) =>{ %>
                        <tr>
                            <td><%= alumno.idAlumno %></td>
                            <td><%= alumno.nombres %></td>
                            <td><%= alumno.apellidos %></td>
                            <td><%= alumno.correo %></td>
                            <td><%= alumno.telefono %></td>
                            <td class="d-flex justify-content-around">
                                <a href="/alumnos/delete/<%= alumno.idAlumno %>" class="btn btn-danger mr-1">Delete</a>
                                <a href="/alumnos/edit/<%= alumno.idAlumno %>" class="btn btn-warning">Update</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div> 

    </div>
</div>

<%- include ("../partials/footer") %>
    

