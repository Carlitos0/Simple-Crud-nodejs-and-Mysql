<div class="container">
    <div class="row pt-5">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <form action="/alumnos/edit/<%= alumno.idAlumno %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="idAlumno" value="<%= alumno.idAlumno %>" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="nombres" value="<%= alumno.nombres %>" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="apellidos" value="<%= alumno.apellidos %>" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="email" name="correo" value="<%= alumno.correo %>" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="number" name="telefono" value="<%= alumno.telefono %>" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Edit Alumno</button> 
                </form>
            </div>
        </div>
    </div>
</div>


